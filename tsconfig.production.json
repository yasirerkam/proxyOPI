{
    "extends": "@tsconfig/node-lts/tsconfig.json",
    "compilerOptions": {
        "rootDir": "./src", // Set the root directory for input files
        "outDir": "./dist", // Set the output directory for compiled files
        "alwaysStrict": true, // Parse in strict mode and emit "use strict" for each source file
        "declaration": true, // Generate a declaration file in addition to the js file
        "composite": true, // Enable constraints that allow a TypeScript project to be used with project references
        "sourceMap": false, // Enable sourcemaps for debugging
        "paths": {
            "*": [
                "./node_modules/*"
            ] // Allow importing modules from the node_modules directory
        },
    },
    "include": [
        "./src/**/*.ts"
    ], // Specify the files to include for compilation
    "exclude": [
        "./node_modules",
        "./src/**/*.spec.ts"
    ] // Specify the files to exclude from compilation (tests)
}